@model System.Collections.Generic.IList<Sana.WebShop.Model.Data.Product>

@{
    ViewBag.Title = "Products List";
    //Layout = "_Layout";
}
<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("Create New Product", "Create", new {mode= ViewData["mode"]})
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Product Number
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
    }

</table>

